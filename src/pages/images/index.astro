---

import MainLayout from "../../layouts/MainLayout.astro";

import post05Img from '../../assets/images/post-05.png'
import Picture from "astro/components/Picture.astro";
import { Image } from 'astro:assets';

---

<MainLayout title="Imagenes" >
    <h1 class="text-5xl text-white">Imagenes</h1>
    <!-- <img src="/assets/images/post-01.png" width="250" height="250"/> -->
    <Image
        src={post05Img} 
        width="250" 
        height="250"
        alt="Imagen del post"
    />
    <h1 class="text-white mt-5 mb-3">Calidad LOW</h1>
    <Image
        src={post05Img} 
        width="250" 
        height="250"
        alt="Imagen del post"
        quality="low"
    />
    <h1 class="text-white mt-5 mb-3">Calidad high</h1>
    <Image
        src={post05Img} 
        width="250" 
        height="250"
        alt="Imagen del post"
        quality="high"
    />
    <h1 class="text-white mt-5 mb-3">Widths - Sizes</h1>
    <Image
        src={post05Img} 
        format="avif"
        width="250" 
        height="250"
        widths={[240,540,720, post05Img.width]}
        sizes={`(max-width:360px) 240px, (max-width:720px) 540px, (max-width:1600px) 720px, ${post05Img.width}px`}
        alt="Imagen del post"
        quality="low"
    />
    <h1 class="text-white mt-5 mb-3">Picture</h1>
    <Picture
        src={post05Img} 
        formats={['webp','avif','jpeg']}
        width="250" 
        height="250"
        alt="Imagen del post"
        quality="high"
    />
    <div
        style={{
            height: '3000px'
        }}
    ></div>
    <!-- <img loading="lazy" src="/assets/images/post-05.png" width="250" height="250"/> -->
</MainLayout>